%define name ajenti
%define version __VERSION__
%define unmangled_version __VERSION__
%define release 1

Summary: The server administration panel
Name: %{name}
Version: %{version}
Release: %{release}
Source0: %{name}-%{version}.tar.gz
License: AGPLv3
Group: Development/Libraries
BuildRoot: %{_tmppath}/%{name}-%{version}-%{release}-buildroot
Prefix: %{_prefix}
BuildArch: noarch
Vendor: Eugene Pankov <e@ajenti.org>
Url: http://ajenti.org/

requires: python-gevent, python-greenlet, python-lxml, openssl, python-gevent-socketio, python-gevent-websocket, python-psutil >= 0.6.0, python-imaging, python-daemon, python-passlib, python-requests, reconfigure >= 0.1.46, python-catcher, python-exconsole >= 0.1.5, python-ldap, dbus-python


%description
Web admin panel

%prep
%setup -n %{name}-%{unmangled_version} -n %{name}-%{unmangled_version}

%build
python setup.py build

%install
python setup.py install --single-version-externally-managed -O1 --root=$RPM_BUILD_ROOT --record=INSTALLED_FILES --prefix=/usr

%clean
rm -rf $RPM_BUILD_ROOT

%files -f INSTALLED_FILES
%defattr(-,root,root)

%config(noreplace) /etc/ajenti/config.json

%post
ajenti-ssl-gen `hostname`
chkconfig --add ajenti
service messagebus start || true
service ajenti restart

echo ------------------------------------------------
echo Now start Ajenti with \'service ajenti restart\'
echo Ajenti will listen on HTTPS port 8000 by default
echo
echo Default username : root
echo Default password : admin
echo ------------------------------------------------
