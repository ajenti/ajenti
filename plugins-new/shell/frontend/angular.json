{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "ajenti-core-plugin": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "less"
        },
        "@schematics/angular:application": {
          "strict": true
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "ngx-build-plus:browser",
          "options": {
            "allowedCommonJsDependencies": [
              "jquery",
              "hammerjs"
            ],
            "outputPath": "../resources/build",
            "index": "src/index.html",
            "main": "src/main.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "tsconfig.app.json",
            "aot": true,
            "assets": [
              "src/favicon.ico",
              "src/assets"
            ],
            "styles": [
              {
                "input": "node_modules/bootstrap/dist/css/bootstrap.css",
                "bundleName": "all",
                "inject": true
              },
              {
                "input": "node_modules/@fortawesome/fontawesome-free/css/all.css",
                "bundleName": "all",
                "inject": true
              },
              {
                "input": "node_modules/@fortawesome/fontawesome-free/css/v4-shims.css",
                "bundleName": "all",
                "inject": true
              },
              {
                "input": "src/styles.less",
                "bundleName": "all",
                "inject": true
              },
              {
                "input": "src/assets/toastr.css",
                "bundleName": "all",
                "inject": true
              }
            ],
            "scripts": [
              {
                "input": "node_modules/jquery/dist/jquery.js",
                "bundleName": "all.vendor",
                "inject": true
              },
              {
                "input": "node_modules/bootstrap/dist/js/bootstrap.js",
                "bundleName": "all.vendor",
                "inject": true
              }
            ],
            "extraWebpackConfig": "webpack.config.js"
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "namedChunks": false,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kb",
                  "maximumError": "1mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "2kb",
                  "maximumError": "4kb"
                }
              ],
              "extraWebpackConfig": "webpack.prod.config.js"
            }
          }
        },
        "serve": {
          "builder": "ngx-build-plus:dev-server",
          "options": {
            "browserTarget": "ajenti-core-plugin:build",
            "extraWebpackConfig": "webpack.config.js",
            "port": 4200,
            "proxyConfig": "proxy.conf.json",
            "liveReload": false
          },
          "configurations": {
            "production": {
              "browserTarget": "ajenti-core-plugin:build:production",
              "extraWebpackConfig": "webpack.prod.config.js"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "ajenti-core-plugin:build"
          }
        },
        "test": {
          "builder": "ngx-build-plus:karma",
          "options": {
            "main": "src/test.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "tsconfig.spec.json",
            "karmaConfig": "karma.conf.js",
            "assets": [
              "src/favicon.ico",
              "src/assets"
            ],
            "styles": [
              "src/styles.less"
            ],
            "scripts": [],
            "extraWebpackConfig": "webpack.config.js"
          }
        },
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {
            "protractorConfig": "e2e/protractor.conf.js",
            "devServerTarget": "ajenti-core-plugin:serve"
          },
          "configurations": {
            "production": {
              "devServerTarget": "ajenti-core-plugin:serve:production"
            }
          }
        }
      }
    }
  },
  "defaultProject": "ajenti-core-plugin"
}
