<xml>
    <label text="Command shell" size="5" />
    <pad>
        <vcontainer spacing="10">
            <hcontainer spacing="10">
                <label text="Command: " />
                <formbox id="frmRun" hideok="True" hidecancel="True">
                    <textinput name="cmd" size="30" id="shell-command" />
                </formbox>
                <minibutton form="frmRun" onclick="form" text="Run" />
                <label text="Recent: " />
                <select id="shell-recent" onchange="shellRecentClick()" onmousedown="shellRecentClick()" />
            </hcontainer>
            <scrollcontainer id="log" width="550" height="500" />
        </vcontainer>
    </pad>
</xml>
