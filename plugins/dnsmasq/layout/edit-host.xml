<xml>
    <dialogbox id="dlgEditHost">
        <label size="2" text="Identification" />
        <formline text="MAC">
            <attachtextinput id="id_mac_val" name="id_mac_val">
                <checkbox id="id_mac" name="id_mac" />
            </attachtextinput>
        </formline>
        <formline text="DHCP ID">
            <attachtextinput id="id_dhcp_val" name="id_dhcp_val">
                <checkbox id="id_dhcp" name="id_dhcp" />
            </attachtextinput>
        </formline>
        <formline text="Client name">
            <attachtextinput id="id_name_val" name="id_name_val">
                <checkbox id="id_name" name="id_name" />
            </attachtextinput>
        </formline>
        
        <label size="2" text="Actions" />

        <formline text="Assign IP">
            <attachtextinput id="act_ip_val" name="act_ip_val">
                <checkbox id="act_ip" name="act_ip" />
            </attachtextinput>
        </formline>
        <formline text="Lease time" help="15m, 2h, 5d or infinite">
            <textinput id="time" name="time" />
        </formline>
        <formline text="Use tag">
            <attachtextinput id="act_tag_val" name="act_tag_val">
                <checkbox id="act_tag" name="act_tag" />
            </attachtextinput>
        </formline>
        <formline text="Ignore">
            <checkbox id="act_ignore" name="act_ignore" />
        </formline>
        <formline text="Set name">
            <attachtextinput id="act_name_val" name="act_name_val">
                <checkbox id="act_name" name="act_name" />
            </attachtextinput>
        </formline>
    </dialogbox>
</xml>
