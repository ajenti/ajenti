<xml>

    <toolbar>
        <toolbutton text="Add option" id="addns" icon="/dl/core/ui/stock/add.png" />
    </toolbar>
    
    <label text="DNS servers and options" size="5" />
    
    <pad>
        <datatable id="list">
            <datatablerow header="True">
                <datatablecell width="50%">
                    <label text="Type" />
                </datatablecell>
                <datatablecell width="50%">
                    <label text="Address" />
                </datatablecell>
                <datatablecell />
            </datatablerow>
        </datatable>
    </pad>
    
    <dialogbox id="dlgEdit">
        <layouttable>    
            <layouttablerow>    
                <layouttablecell>    
                    <label text="Type" />
                </layouttablecell>    
                <layouttablecell>    
                    <select name="cls">
                        <selectoption text="Nameserver" id="cls-nameserver" />
                        <selectoption text="Local domain" id="cls-domain" />
                        <selectoption text="Search list" id="cls-search" />
                        <selectoption text="Sort list" id="cls-sortlist" />
                        <selectoption text="Options" id="cls-options" />
                    </select>
                </layouttablecell>    
            </layouttablerow>    
            <layouttablerow>    
                <layouttablecell>    
                    <label text="Value" />
                </layouttablecell>    
                <layouttablecell>    
                    <textinput name="address" id="value" />
                </layouttablecell>    
            </layouttablerow>    
        </layouttable>    
    </dialogbox>
    
</xml>    
