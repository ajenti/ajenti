<hc>
    <box width="20">
        <icon icon="hdd" />
    </box>
    <box width="90">
        <label id="device" style="bold" text="---" />
    </box>
    <box width="50">
        <label id="percent" text="---" />
    </box>
    <progressbar id="usage" width="150" value="0.4" />

    <dialog id="config-dialog" visible="False">
        <pad>
            <formline text="{Device}">
                <dropdown id="device" bind="device" />
            </formline>
        </pad>
    </dialog>
</hc>