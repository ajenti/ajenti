<xml>
    <toolbar>
        <hcontainer>
            <button text="Update plugin list" id="update" icon="/dl/plugins/update-lists.png" />
            <button text="Restart Ajenti" id="restart" icon="/dl/core/ui/stock/refresh.png" />
        </hcontainer>
    </toolbar>

    <label size="5" text="Installed" />

    <pad id="main">
        <dt width="100%" id="list">
            <dtr header="True">
                <dth />
                <dth />
                <dth>
                    <label text="Name" />
                </dth>
                <dth>
                    <label text="Description" />
                </dth>
                <dth>
                    <label text="Version" />
                </dth>
                <dth>
                    <label text="Author" />
                </dth>
                <dth />
            </dtr>
        </dt>
    </pad>

    <label size="5" text="Available" />

    <pad>
        <dt width="100%" id="avail">
            <dtr header="True">
                <dth />
                <dth />
                <dth>
                    <label text="Name" />
                </dth>
                <dth>
                    <label text="Description" />
                </dth>
                <dth>
                    <label text="Version" />
                </dth>
                <dth>
                    <label text="Author" />
                </dth>
                <dth />
            </dtr>
        </dt>

        <spacer height="10" />
        <label size="2" text="Upload plugin package" />
        <spacer height="5" />
        <uploader url="/upload_plugin" text="Install" />
    </pad>
</xml>
