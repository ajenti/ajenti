 <collapserow>
    <box>
        <right>
            <button bind="__delete" icon="remove" style="icon" warning="{Confirm deletion}" />
        </right>
        <hc>
            <icon icon="user" />
            <label style="bold" bind="name" />
            <label bind="uid" />
        </hc>
    </box>

    <pad>
        <hc>
            <vc>
                <formline text="{Username}">
                    <textbox bind="name" />
                </formline>
                <formline text="UID">
                    <textbox bind="uid" />
                </formline>
                <formline text="GID">
                    <textbox bind="gid" />
                </formline>
                <formline text="{New password}">
                    <hc>
                        <passwordbox id="new-password" style="width-auto" />
                        <button id="change-password" text="{Change}" style="mini" />
                    </hc>
                </formline>
            </vc>
            <vc>
                <formline text="{Comment}">
                    <textbox bind="comment" />
                </formline>
                <formline text="{Home directory}">
                    <hc>
                        <textbox bind="home" style="width-auto" />
                        <button id="create-home-dir" text="{Create}" style="mini" visible="False" />
                    </hc>
                </formline>
                <formline text="{Shell}">
                    <textbox bind="shell" />
                </formline>
            </vc>
        </hc>
    </pad>
</collapserow>